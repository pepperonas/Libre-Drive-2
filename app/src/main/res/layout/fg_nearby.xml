<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_nearby"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_200"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_nearby_gps_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_test_string"
        android:textAlignment="center"
        android:textAppearance="@style/AppTheme.Medium_Text"
        android:textSize="56sp"/>

    <TextView
        android:id="@+id/tv_nearby_ctrl_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_test_string"
        android:textAlignment="center"
        android:textAppearance="@style/AppTheme.Medium_Text" />

    <ImageView
        android:id="@+id/iv_speed_limit"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/tv_nearby_ctrl_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_test_string"
        android:textAlignment="center"
        android:textAppearance="@style/AppTheme.Large_Text" />

    <TextView
        android:id="@+id/tv_nearby_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/_test_string"
        android:textAlignment="center"
        android:textAppearance="@style/AppTheme.Large_Text" />

</LinearLayout>