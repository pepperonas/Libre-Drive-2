<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="@string/PREF_SCR_MAIN">

    <PreferenceCategory
        android:key="@string/PREF_CAT_MAIN"
        android:title="@string/pref_cat_main">

        <CheckBoxPreference
            android:key="@string/TOUCH_TWICE_TO_EXIT"
            android:summary="@string/pref_sum_touch_twice_to_exit"
            android:title="@string/pref_title_touch_twice_to_exit" />

        <CheckBoxPreference
            android:key="@string/PLAY_NOTIFICATION"
            android:summary="@string/empty"
            android:title="@string/pref_title_play_notification" />

        <CheckBoxPreference
            android:key="@string/PLAY_TTS"
            android:summary="@string/empty"
            android:title="@string/pref_title_play_tts" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="@string/PREF_CAT_LOCKED"
        android:title="@string/pref_cat_locked">

        <Preference
            android:key="@string/LOCKED_PREF"
            android:summary="@string/empty"
            android:title="@string/pref_title_locked_pref" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="@string/PREF_CAT_MORE"
        android:title="@string/pref_cat_more">

        <Preference
            android:key="@string/CHANGELOG"
            android:summary="@string/empty"
            android:title="@string/pref_title_changelog" />

        <Preference
            android:key="@string/BUILD_VERSION"
            android:summary="@string/empty"
            android:title="@string/pref_title_build_version" />

    </PreferenceCategory>

</PreferenceScreen>